<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eticket.liamu.eticket2.BookingOptionsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/bookingOptions_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:titleTextColor="@android:color/background_light" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bookingOptions_toolbar"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:text="Booking Options"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/BookingOptions_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="11dp"
        android:text="Jackass 3D Uncut" />

    <TextView
        android:id="@+id/BookingOptions_date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/BookingOptions_title_txt"
        android:layout_below="@+id/BookingOptions_title_txt"
        android:text="23 March 2018" />

    <TextView
        android:id="@+id/BookingOptions_venue_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/BookingOptions_date_txt"
        android:layout_below="@+id/BookingOptions_date_txt"
        android:text="Kino Glenrothes" />

    <Spinner
        android:id="@+id/BookingOptions_Time_spnr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/BookingOptions_venue_txt"
        android:layout_below="@+id/BookingOptions_venue_txt"
        android:layout_marginTop="19dp"
        android:layout_toStartOf="@+id/BookingOptions_place_btn" />

    <Button
        android:id="@+id/BookingOptions_place_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/BookingOptions_Time_spnr"
        android:layout_marginEnd="48dp"
        android:background="@color/colorPrimary"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Place Booking"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

</RelativeLayout>
