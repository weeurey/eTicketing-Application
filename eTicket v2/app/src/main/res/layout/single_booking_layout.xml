<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/single_booking_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="11dp"
        android:text="Hunch Back of Hot"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/single_booking_vemue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/single_booking_title"
        android:layout_below="@+id/single_booking_title"
        android:layout_marginTop="14dp"
        android:text="Odeon Dundee" />

    <TextView
        android:id="@+id/single_booking_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/single_booking_vemue"
        android:layout_alignBottom="@+id/single_booking_vemue"
        android:layout_centerHorizontal="true"
        android:text="2345" />

    <TextView
        android:id="@+id/single_booking_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/single_booking_time"
        android:layout_alignBottom="@+id/single_booking_time"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:text="26th December 2015" />

    <Button
        android:id="@+id/singleBooking_redeem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="Redeem" />
</RelativeLayout>