<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:background="@android:color/darker_gray">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/event_single_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/defaultselfie" />

    <TextView
        android:id="@+id/event_single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/event_single_image"
        android:layout_marginStart="27dp"
        android:layout_toEndOf="@+id/event_single_image"
        android:text="Display Name"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/event_single_venue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/event_single_name"
        android:layout_below="@+id/event_single_name"
        android:text="Kino Glenrothes" />

</RelativeLayout>